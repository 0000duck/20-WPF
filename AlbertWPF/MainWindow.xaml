<Window x:Class="AlbertWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AlbertWPF"
        mc:Ignorable="d"
        Title="{Binding Title}"  Height="450" Width="800">
    <Grid>
        <Button x:Name="btn_test" 
                Content="{Binding BtnModel.Content}" 
                HorizontalAlignment="Left" 
                Background="Orange" 
                VerticalAlignment="Top"
                Width="{Binding BtnModel.Width}"
                Height="{Binding BtnModel.Height}"
                Command="{Binding ButtonClickCommand}"
                ></Button>
        <TextBox x:Name="txt_test" 
                 Height="65" 
                 Background="Blue"
                 Width="77" 
                 VerticalAlignment="Top"
                 HorizontalAlignment="Left" 
                 Margin="409,53,0,0"
                 Text="Albertzhao"></TextBox>
    </Grid>
</Window>
