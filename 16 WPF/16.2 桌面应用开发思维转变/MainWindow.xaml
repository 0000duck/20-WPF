<Window x:Class="_16._2_桌面应用开发思维转变.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_16._2_桌面应用开发思维转变"
        mc:Ignorable="d"
        Title="{Binding Title}" Height="434" Width="708">
    <Grid>
        <StackPanel>
            <TextBox Height="20" 
                     Background="Orange" 
                     VerticalAlignment="Top"
                     Text="{Binding TbModel.Text}"
                     Margin="10"/>
            <Label Background="Pink"
                   Height="40"
                   Margin="10"
                   Content="{Binding LbModel.Content}"
            />
        </StackPanel>
        
        <Button Height="20"
                Background="Orange"
                Width="{Binding BtModel.Width}"
                Margin="10"
                Command="{Binding ClickBt}"/>
    </Grid>
</Window>
